{
  "openapi": "3.0.0",
  "info": {
    "title": "Documentation Test Compass UOL",
    "description": "This is an API Test Compass UOL",
    "version": "1.0.0",
    "contact": {
      "email": "tharlys2015c@gmail.com"
    }
  },
  "servers": [
    {
      "url": "http://localhost:3333/api",
      "description": "API development server"
    }
  ],
  "paths": {
    "/cities": {
      "get": {
        "summary": "Find list cities",
        "description": "Find list cities or search city per name or state",
        "tags": [
          "Cities"
        ],
        "parameters": [
          {
            "name": "page",
            "in": "query",
            "description": "Page for consult",
            "default": 1,
            "schema": {
              "type": "number"
            }
          },
          {
            "name": "limit",
            "in": "query",
            "description": "Limit for consult",
            "default": 10,
            "schema": {
              "type": "number"
            }
          },
          {
            "name": "name",
            "in": "query",
            "description": "Name city for consult",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "state",
            "in": "query",
            "description": "State city for consult",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      },
      "post": {
        "summary": "Create city",
        "description": "Create a new city",
        "tags": [
          "Cities"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "state": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Success"
          },
          "400": {
            "description": "Bad Request"
          },
          "422": {
            "description": "Unprocessable Entity"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/clients": {
      "post": {
        "summary": "Create client",
        "description": "Create new client",
        "tags": [
          "Clients"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "full_name": {
                    "type": "string"
                  },
                  "gender": {
                    "type": "string"
                  },
                  "date_nasc": {
                    "type": "string",
                    "default": "2021-11-01"
                  },
                  "age": {
                    "type": "number"
                  },
                  "city_id": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Success"
          },
          "400": {
            "description": "Bad Request"
          },
          "404": {
            "description": "Not Found"
          },
          "422": {
            "description": "Unprocessable Entity"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      },
      "get": {
        "summary": "Find list clients",
        "description": "Find list clients or search client per name",
        "tags": [
          "Clients"
        ],
        "parameters": [
          {
            "name": "page",
            "in": "query",
            "description": "Page for consult",
            "default": 1,
            "schema": {
              "type": "number"
            }
          },
          {
            "name": "limit",
            "in": "query",
            "description": "Limit for consult",
            "default": 10,
            "schema": {
              "type": "number"
            }
          },
          {
            "name": "name",
            "in": "query",
            "description": "Name client for consult",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/clients/{id}": {
      "get": {
        "summary": "Find client by ID",
        "description": "Find client by ID (uuid)",
        "tags": [
          "Clients"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Client id",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success"
          },
          "404": {
            "description": "Not Found"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      },
      "delete": {
        "summary": "Delete client",
        "description": "Delete client by ID (uuid)",
        "tags": [
          "Clients"
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Client id",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success"
          },
          "404": {
            "description": "Not Found"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "City": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "state": {
            "type": "string"
          },
          "created_at": {
            "type": "timezone"
          },
          "updated_at": {
            "type": "timezone"
          }
        }
      }
    }
  }
}