{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "rootDir": "./",
    "baseUrl": "./src",
    "outDir": "./dist",
    "paths": {
      "@modules/*": [
        "modules/*"
      ],
      "@config/*": [
        "config/*"
      ],
      "@shared/*": [
        "shared/*"
      ],
      "@errors/*": [
        "shared/errors/*"
      ],
      "@utils/*": [
        "utils/*"
      ],
      "@docs/*": [
        "docs/*"
      ]
    },
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    "strict": true,       
    "skipLibCheck": true,
    "strictPropertyInitialization": false,
    
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  }
}